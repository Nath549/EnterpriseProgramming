<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
</head>
<body>
    @RenderSection("Breaking", false)
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index"><img src="http://newswatchtv.com/wp-content/uploads/2015/07/NewsWatch-Logo-Mark1.jpg" width="50" height="50" /></a>
        </div>
        <ul class="nav navbar-nav">
            <li>
                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    <a href="/Accounts/Logout">Logout</a>
                }
                else
                {
                    <a href="/Accounts/Login">Login</a>
                }
            </li>
            @if (!HttpContext.Current.User.Identity.IsAuthenticated)
            {

                <li>
                    <a href="/Users/Register">Register</a>
                </li>
                
            }
            @if (HttpContext.Current.User.Identity.IsAuthenticated)
            {
                <li>
                    <a href="/Users/Index">Show Authors</a>
                </li>
                <li>
                    <a href="/Articles/ArticlesArchive">Articles Archive</a>
                </li>
            }
            <li><a href="/category/National">National</a></li>
            <li><a href="/category/Overseas">Overseas</a></li>
            <li><a href="/category/Sports">Sports</a></li>
            <li><a href="/category/Opinion">Opinion</a></li>
            <li><a href="/category/Travel">Travel</a></li>
            <li><a href="/category/Odd">Odd</a></li>
        </ul>
    </nav>

    <div>
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("javascript", false)
</body>
</html>
