@{
    if(ViewContext.Controller.ViewBag.Category != null)
    {
        if (ViewContext.Controller.ViewBag.Category.CategoryID == 1)
        {
            Layout = "~/Views/CategoryLayouts/_LayoutNational.cshtml";
        }
        else if (ViewContext.Controller.ViewBag.Category.CategoryID == 2)
        {
            Layout = "~/Views/CategoryLayouts/_LayoutOverseas.cshtml";
        }
        else if (ViewContext.Controller.ViewBag.Category.CategoryID == 3)
        {
            Layout = "~/Views/CategoryLayouts/_LayoutSports.cshtml";
        }
        else if (ViewContext.Controller.ViewBag.Category.CategoryID == 4)
        {
            Layout = "~/Views/CategoryLayouts/_LayoutOpinion.cshtml";
        }
        else if (ViewContext.Controller.ViewBag.Category.CategoryID == 5)
        {
            Layout = "~/Views/CategoryLayouts/_LayoutTravel.cshtml";
        }
        else if (ViewContext.Controller.ViewBag.Category.CategoryID == 6)
        {
            Layout = "~/Views/CategoryLayouts/_LayoutOdd.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}